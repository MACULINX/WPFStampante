<Window x:Class="Bucci.Marco._4I.Stampante.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bucci.Marco._4I.Stampante"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="cyan" Grid.Column="0" Grid.Row="1" Background="Cyan" Click="cyan_Click"/>
        <Button x:Name="magenta" Grid.Column="1" Grid.Row="1" Background="Magenta" Click="magenta_Click"/>
        <Button x:Name="yellow" Grid.Column="2" Grid.Row="1" Background="Yellow" Click="yellow_Click"/>
        <Button x:Name="black" Grid.Column="3" Grid.Row="1" Background="Black" Click="black_Click"/>





    </Grid>
</Window>
